{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": ["es2017", "dom"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types/"],
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules", "app"]
}
